                </Grid.RowDefinitions>

                <Grid Grid.Column="1" Grid.Row="1">
                    <Viewbox StretchDirection="Both" Stretch="Uniform">
                        <Button x:Name="btnRestart" Click="btnRestart_Click" Padding="0" BorderThickness="0" BorderBrush="#1963d0" >
                            <Image Source="/Assets/Afbeeldingen/BKE/Restart.png" />
                        </Button>
                    </Viewbox>
                </Grid>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height=".07*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height=".55*"/>
