<Page 
    x:Class="Ganzenbord.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ganzenbord"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="main">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/Ganzenbord_pd.svg.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="135"/>
            <RowDefinition Height="135"/>
            <RowDefinition Height="135"/>
            <RowDefinition Height="135"/>
            <RowDefinition Height="135"/>
            <RowDefinition Height="135"/>
            <RowDefinition Height="135"/>
            <RowDefinition Height="135"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="2" HorizontalAlignment="Left" Height="6" Margin="10,327,0,0" Grid.Row="2" VerticalAlignment="Top" Width="654"/>
        <Image Grid.Column="10" HorizontalAlignment="Center" Height="100" Grid.Row="3" VerticalAlignment="Center" Width="100" Visibility="Visible" Source="Assets/Ganzenbord_pd.svg.png"/>
        <Image Grid.Column="10" HorizontalAlignment="Center" Height="100" Grid.Row="3" VerticalAlignment="Top" Width="100" Margin="0,44,0,0" Visibility="Visible" Grid.RowSpan="2" Source="Assets/Ganzenbord_pd.svg.png"/>
    </Grid>
</Page>
